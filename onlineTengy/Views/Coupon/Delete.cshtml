@model onlineTengy.Models.Coupons
@{
    ViewData["Title"] = "Delete";
}
<br />
<h2>Delete-Coupons</h2>
<br />

<form method="post" enctype="multipart/form-data" asp-action="Delete">
    <div class="row container form-border">
        <div class="col-12 border">

            @{
                var Base64 = Convert.ToBase64String(Model.Pitcher);


                //var ImgSrc = string.Format("data:imgage/jpg;base64,{0}", Base64);

                var ImgSrc = string.Format($"data:imgage/jpg;base64,{Base64}");
            }
            <img src="@ImgSrc" height="53px" width="100%" />
        </div>

        <div class="col-6" style="margin-top:7px">
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pitcher" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="files" multiple class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupons.ECouponsType>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" class="form-control" />
                </div>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="MinimumAmount" class="form-control" />
                </div>

            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="isActive" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="isActive" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-12" style="padding-top:0px;">
            <input type="submit" class="btn btn-outline-danger" asp-route-id="@Model.Id" value="Delete" />
            <a class="btn btn-primary" asp-action="Index">Back To List  </a>
        </div>
    </div>
    

</form>