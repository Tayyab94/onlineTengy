@model onlineTengy.Models.Coupons
@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Create Coupons</h2>
<br />

<div class="row">
    <div class="col-6">
        <form method="post" enctype="multipart/form-data" asp-action="Create">
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pitcher" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="files" multiple class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CouponType" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupons.ECouponsType>()" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Discount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Discount" class="form-control" />
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="MinimumAmount" class="form-control" />
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>



            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="isActive" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" asp-for="isActive" class="form-control" />
                </div>
            </div>

            <div class="col-1"></div>
            <div class="col-5">
                <input type="submit" class="btn btn-outline-primary" value="Submit" />
                <a class="btn btn-primary" asp-action="Index">Back To List  </a>
            </div>
        </form>
    </div>
</div>