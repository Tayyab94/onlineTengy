@model onlineTengy.Models.Catagory

@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-md-12">
        <h2 class="text-center text-uppercase">Delete Catagory</h2>

        <h3 class="text-danger">Are you sure you want to delete this?</h3>

    </div>
</div>

<form asp-action="Delete">
    <div class="form-border">
        <input asp-for="Id" type="hidden" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-2">

                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-4">

                    <input asp-for="Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">

                    <label asp-for="DisplayOrder" class="control-label"></label>
                </div>
                <div class="col-4">

                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-outline-danger" />
            &nbsp;
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>

    </div>
</form>
