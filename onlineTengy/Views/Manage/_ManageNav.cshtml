@using onlineTengy.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<a class="form-control btn btn-outline-secondary" asp-action="Index">Profile</a>
<br /><br />
<a class="form-control btn btn-outline-secondary" asp-action="ChangePassword">Password</a>
<br /><br />
@if (hasExternalLogins)
{
    <a class="form-control btn btn-outline-secondary" asp-action="ExternalLogins">External logins</a>
}
<a class="form-control btn btn-outline-success" asp-action="TwoFactorAuthentication">Two-factor authentication</a>
