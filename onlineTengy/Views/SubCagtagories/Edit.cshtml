@model onlineTengy.Models.SubCatagoryViewModel.SubCatagoryAndCatagoryViewModel

@using onlineTengy.Extensions;

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Sub Catagory</h2>

@await Html.PartialAsync("_StatusMessage", Model.statusMessage)
<div class="row">
    <div class="col-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <did class="form-group row">
                <div class="col-3">
                    <label asp-for="subCatagory.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="subCatagory.Name" class="form-control" />
                </div>
            </did>

            <did class="form-group row">
                <div class="col-3">
                    <label asp-for="subCatagory.CatagoryId" class="custom-label"></label>
                </div>
                <div class="col-5">
                    @*<input type="text" asp-for="subCatagory.Name" class="form-control" />*@
                    <select asp-for="subCatagory.CatagoryId" asp-items="Model.catagoriesList.ToSelectlistItem(Model.subCatagory.CatagoryId)" class="form-control"></select>
                </div>
            </did>


            <did class="form-group row">
                <div class="col-3">

                </div>
                <div class="col-5">
                    <input type="submit" class="btn btn-outline-primary" value="Update" />
                    <a asp-action="Index" class="btn btn-info">back To Action</a>
                </div>
            </did>


        </form>
    </div>

    <div class="col-4">
        @if (Model.SubCatagoryList.Count() > 0)
        {
            <p>Existing Sub Catagories</p>
            <ul class="list-group">
                @foreach (var item in Model.SubCatagoryList)
                {

                    <li class="list-group-item">
                        @item
                    </li>
                }
            </ul>
        }

    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


