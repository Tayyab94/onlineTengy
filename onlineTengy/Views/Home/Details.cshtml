@model onlineTengy.Models.ShoppingCart
@{
    ViewData["Title"] = "Details";
}
<br />
<h2>Menu Item's Detail</h2>
<hr />
<form method="post">

    <div class="form-border row">
        <div class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="MenuItem.Description" class="form-control" rows="5" readonly></textarea>
                    @*<input asp-for="MenuItem.Description" class="form-control" readonly />*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Spicyness" disabled asp-items="Html.GetEnumSelectList<MenuItem.ESpicyness>()" class="form-control"></select>
                    @*<input asp-for="MenuItem.Name" class="form-control" readonly />*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCatagory" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCatagory.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Catagory" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Catagory.Name" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="count" class="custom-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="count" class="form-control" />
                    <span asp-validation-for="count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">

                </div>
                <div class="col-8">
                    <button type="submit" class="btn form-control btn-primary">Add to Cart</button>
                </div>
            </div>
        </div>

        <div class="col-1">
        </div>
        <div class="col-3">
            <img src="@Model.MenuItem.ImageUrl" class="img-thumbnail" />
        </div>
        <div class="col-12">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back to List</a>
        </div>
    </div>
    <input type="hidden" asp-for="MenuItemId" />
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
